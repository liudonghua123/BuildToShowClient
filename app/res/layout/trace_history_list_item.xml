<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dip"
    android:orientation="horizontal"
    android:padding="5dip">

    <com.google.android.gms.maps.MapView
        android:id="@+id/trace_history_list_item_map"
        android:layout_width="200dip"
        android:layout_height="match_parent"
        app:cameraBearing="0"
        app:cameraTilt="0"
        app:cameraZoom="15"
        app:mapType="normal"
        app:uiCompass="false"
        app:uiZoomControls="false"
        app:uiZoomGestures="false"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/common_trace_distance" />

                <TextView
                    android:id="@+id/trace_history_list_item_text_view_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/common_trace_total_time" />

                <TextView
                    android:id="@+id/trace_history_list_item_text_view_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/common_trace_average_speed" />

                <TextView
                    android:id="@+id/trace_history_list_item_text_view_average_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:text="0" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:text="2014-06-25 25:25:25"
            android:id="@+id/trace_history_list_item_text_view_start_date_time" />
    </LinearLayout>

</LinearLayout>
